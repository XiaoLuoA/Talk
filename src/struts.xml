<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="one" extends="struts-default" >
		<action name="toColor" class="service.StringToColorAction" >
			<result>index.jsp</result>
		</action>
		
     <!-- 注册 -->		
	<action name="registerAction" class="UserAction.RegisterAction" method="register">
	  <result name="input">/Register/Register.jsp</result>
	  <result name="success">/Register/RegisterSuccess.jsp</result>
	  <result name="fail">/Register/RegisterFail.jsp</result>
	</action>
	

	<!--  User管理// -->
	
	<action name="*" class="com.xiaoluo.admin.user.AdminUserAction" method="{1}">
	  <result name="admin">/admin/index.jsp</result>
	  <result name="listAllUser">/admin/fail.jsp</result>
	  <result name="update">/admin/updateUser.jsp</result>
	  <result name="fail">/admin/fail.jsp</result>
	</action>
	

	
	<!--  Groups管理//listALL -->
	<action name="123" class="com.xiaoluo.admin.group.AdminGroupsAction" method="{1}">
	  <result name="admin">/admin/group.jsp</result>
	  <result name="update">/admin/updateGroup.jsp</result>
	  <result name="fail">/admin/fail.jsp</result>
	</action>
	
	

	<!-- 登录 -->
	<action name="loginAction" class="UserAction.LoginAction" method="login">
	  <result name="input">/Login/Login.jsp</result>
	  <result name="success">/Login/LoginSuccess.jsp</result>
	  <result name="fail">/Login/LoginFail.jsp</result>
	  <result name="null">/Login/Login.jsp</result>
	</action>
		
	<!-- 忘记密码 -->
	<action name="lostpassAction" class="UserAction.LostpassAction" method="lostpassword">
	  <result name="input">/Login/LostPassword.jsp</result>
	  <result name="success">/Login/LostPassword.jsp</result>
	  <result name="fail">/Login/CheckError.jsp</result>
	  <result name="null">/Login/CheckError.jsp</result>
	</action>
	
	<!-- 验证码 -->
	<action name="changepassAction" class="UserAction.ChangepassAction" method="changepassword">
	  <result name="input">/Login/LostPassword.jsp</result>
	  <result name="success">/Login/FillPassword.jsp</result>
	  <result name="fail">/Login/CheckFail.jsp</result>
	</action>

	</package>
	
	
</struts>    
