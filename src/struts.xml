	</action> -->
	
	
	
	<!--  Groups管理//listALL -->
	<action name="listAllGroupsAction" class="com.xiaoluo.admin.group.AdminGroupsAction" method="listAllGroups">
	  <result name="admin">/admin/index.jsp</result>
	  <result name="fail">/admin/fail.jsp</result>
	</action>

	</package>
	
</struts>    
